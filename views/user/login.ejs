<% layout('layouts/boilerplate.ejs') %>

<div class="card shadow col-11 col-md-8 col-lg-5 m-auto my-4">
    <div class="row g-0">
        <img class="card-img-top"
            src="https://images.unsplash.com/photo-1625834509314-3b12c6153624?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1332&q=80"
            alt="">
        <div class="card-body p-4">
            <h2 class="text-center mb-4">Login</h2>
            <div class=" m-auto">
                <form class="needs-validation" action="/login" method="post" novalidate>
                    <div class="mb-3">
                        <label class="col-form-label" for="username"><b>Username <i
                                    class="text-danger">*</i></b></label>
                        <input class="form-control" type="text" name="username" id="username" placeholder="Username"
                            autofocus required>
                        <div class="invalid-feedback">Please enter your username! </div>
                    </div>
                    <div class="mb-5">
                        <label class="col-form-label" for="password"><b>Password <i
                                    class="text-danger">*</i></b></label>
                        <div class="input-group">
                            <input class="form-control" type="password" name="password" id="password"
                                placeholder="Password" required>
                            <div class="invalid-feedback">Please enter your password! </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <div class="text-center mb-3">
                            <a class="btn btn-dark btn-sm" href="/">Cancel</a>
                            <button class="btn btn-danger btn-sm form-submit">Sign In</button>
                        </div>
                        <a href="/register">Doesn't have an account? Go to sign up!</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>